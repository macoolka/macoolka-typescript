    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "jest": "^24.8.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(./src/*|\\.(test|spec))\\.(ts|tsx)$"
  },
  "homepage": "https://github.com/macoolka/macoolka-typescript",
  "repository": {
    "type": "git",
    "url": "https://github.com/macoolka/macoolka-typescript.git"
